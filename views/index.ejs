<%- include('layouts/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (users.length> 0) { %>
                                <table class="table table-striped my-3">
                                    <thead>
                                        <tr class="table-dark text-center">
                                            <th>ID</th>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((row,user)=> { %>
                                            <tr>
                                                <td>
                                                    <%= user %>
                                                </td>
                                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail" />
                                                </td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.email %>
                                                </td>
                                                <td>
                                                    <%= row.phone %>
                                                </td>

                                                <td>
                                                    <a href="/edit/<%= row._id %>"
                                                        class="btn btn-primary btn-sm me-2"><i
                                                            class="fas fa-edit"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="btn btn-danger btn-sm"><i
                                                            class="fas fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">
                                        No User Found
                                    </h1>
                                    <% } %>
                        </div>
            </div>
        </div>
    </div>

    <%- include('layouts/footer') %>